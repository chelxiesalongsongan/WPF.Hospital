<Window x:Class="WPF.Hospital.AddMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Medicine"
        Height="180"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Add New Medicine" FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="Name"/>
            <TextBox Grid.Column="1" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="1" Content="Brand"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Brand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <Button x:Name="btnAddMedicine" Grid.Row="2" Grid.ColumnSpan="2" Content="Add Medicine" Click="btnAddMedicine_Click"/>
        </Grid>
    </Grid>
</Window>