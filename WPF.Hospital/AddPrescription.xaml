<Window x:Class="WPF.Hospital.AddPrescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Prescription"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- History -->
            <RowDefinition Height="Auto"/>
            <!-- Medicine -->
            <RowDefinition Height="Auto"/>
            <!-- Quantity -->
            <RowDefinition Height="Auto"/>
            <!-- Frequency -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="50"/>
            <!-- Save Button -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- HISTORY -->
        <Label Grid.Row="0" Grid.Column="0" Content="History:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbHistory" Grid.Row="0" Grid.Column="1" Height="25" Margin="0,5" />

        <!-- MEDICINE -->
        <Label Grid.Row="1" Grid.Column="0" Content="Medicine:" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbMedicine" Grid.Row="1" Grid.Column="1" Height="25" Margin="0,5"/>

        <!-- QUANTITY -->
        <Label Grid.Row="2" Grid.Column="0" Content="Quantity:" VerticalAlignment="Center"/>
        <TextBox x:Name="tbQuantity" Grid.Row="2" Grid.Column="1" Height="25" Margin="0,5"/>

        <!-- FREQUENCY -->
        <Label Grid.Row="3" Grid.Column="0" Content="Frequency:" VerticalAlignment="Center"/>
        <TextBox x:Name="tbFrequency" Grid.Row="3" Grid.Column="1" Height="25" Margin="0,5"/>

        <!-- SAVE BUTTON -->
        <Button x:Name="btnSavePrescription"
                Grid.Row="5"
                Grid.ColumnSpan="2"
                Content="Save Prescription"
                Height="35"
                Width="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="btnSavePrescription_Click"/>
    </Grid>
</Window>