<Window x:Class="WPF.Hospital.AllPatients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Patients"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="All Patients" FontWeight="Bold"/>

        <Label Grid.Row="1" Content="Search:"/>
        <TextBox x:Name="txtSearch"
                 Grid.Row="1"
                 Grid.Column="1"
                 TextChanged="txtSearch_TextChanged"/>

        <DataGrid x:Name="dgPatients"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Margin="0,5,0,50"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="50"/>
                <DataGridTextColumn Header="Birthdate" Binding="{Binding BirthdateString}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="btnUpdatePatient"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                Height="35"
                Content="Update Selected Patient"
                Click="btnUpdatePatient_Click"/>
    </Grid>
</Window>