<Window x:Class="WPF.Hospital.AllPrescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Prescriptions"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <Label Content="All Prescriptions" FontWeight="Bold"/>

        <!-- Search -->
        <Label Grid.Row="1" Content="Search:"/>
        <TextBox x:Name="txtSearch"
                 Grid.Row="1"
                 Grid.Column="1"
                 TextChanged="txtSearch_TextChanged"/>

        <!-- DataGrid -->
        <DataGrid x:Name="dgPrescriptions"
                  Grid.Row="2"
                  Grid.ColumnSpan="2"
                  Margin="0,5,0,50"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="History ID" Binding="{Binding HistoryId}" Width="80"/>
                <DataGridTextColumn Header="Medicine ID" Binding="{Binding MedicineId}" Width="80"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Frequency" Binding="{Binding Frequency}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Update Button -->
        <Button x:Name="btnUpdatePrescription"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                VerticalAlignment="Bottom"
                Height="35"
                Content="Update Selected Prescription"
                Click="btnUpdatePrescription_Click"/>
    </Grid>
</Window>