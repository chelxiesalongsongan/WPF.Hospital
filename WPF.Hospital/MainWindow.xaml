<Window x:Class="WPF.Hospital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Source="/hospital.jpg" />
                <Rectangle Grid.Column="1" Fill="#FFFFE600"/>
                <TextBlock Text="UAC Medical Center" Grid.Column="1" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" FontFamily="Arial" Padding="10,0,0,0"/>
            </Grid>

            <!-- MENU -->
            <Menu Grid.Row="1">
                <MenuItem Header="Patient">
                    <MenuItem Header="Add Patient"/>
                </MenuItem>
                <MenuItem Header="Medicine">
                    <MenuItem Header="Add Medicine"/>
                </MenuItem>
                <MenuItem Header="Doctors">
                    <MenuItem Header="Add Doctor"/>
                </MenuItem>
                <MenuItem Header="History">
                    <MenuItem Header="Add History"/>
                </MenuItem>
                <MenuItem Header="Prescription">
                    <MenuItem Header="Add Prescription"/>
                </MenuItem>
            </Menu>

            <!-- PATIENT MAINTENANCE -->
            <Label Grid.Row="2" Margin="2" Content="Patient Maintenance" FontSize="16" FontWeight="Bold"/>
            <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="3">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="btnAddPatient" Content="Add Patient" Click="btnAddPatient_Click"/>
                <Button x:Name="btnDeletePatient" Content="Delete Patient" Click="btnDeletePatient_Click"/>
                <Button x:Name="btnAllPatients" Content="All Patients" Click="btnAllPatients_Click"/>
            </StackPanel>

            <!-- MEDICINE MAINTENANCE -->
            <Label Grid.Row="4" Margin="2" Content="Medicine Maintenance" FontSize="16" FontWeight="Bold"/>
            <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="5">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="btnAddMedicine" Content="Add Medicine" Click="btnOpenAddMedicine_Click"/>
                <Button x:Name="btnDeleteMedicine" Content="Delete Medicine" Click="btnOpenDeleteMedicine_Click"/>
                <Button x:Name="btnAllMedicine" Content="All Medicine" Click="btnOpenAllMedicine_Click"/>
            </StackPanel>

            <!-- DOCTOR MAINTENANCE -->
            <Label Grid.Row="6" Margin="2" Content="Doctor Maintenance" FontSize="16" FontWeight="Bold"/>
            <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="7">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="btnAddDoctor" Content="Add Doctor" Click="btnOpenAddDoctor_Click"/>
                <Button x:Name="btnDeleteDoctor" Content="Delete Doctor" Click="btnOpenDeleteDoctor_Click"/>
                <Button x:Name="btnAllDoctor" Content="All Doctors" Click="btnOpenAllDoctor_Click"/>
            </StackPanel>

            <!-- HISTORY MAINTENANCE -->
            <Label Grid.Row="8" Margin="2" Content="History Maintenance" FontSize="16" FontWeight="Bold"/>
            <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="9">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="btnAddHistory" Content="Add History" Click="btnOpenAddHistory_Click" />
                <Button x:Name="btnDeleteHistory" Content="Delete History" Click="btnOpenDeleteHistory_Click"/>
                <Button x:Name="btnAllHistory" Content="All History" Click="btnOpenAllHistory_Click"/>
            </StackPanel>

            <!-- PRESCRIPTION MAINTENANCE -->
            <Label Grid.Row="10" Margin="2" Content="Prescription Maintenance" FontSize="16" FontWeight="Bold"/>
            <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="11">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="btnAddPrescription" Content="Add Prescription" Click="btnAddPrescription_Click"/>
                <Button x:Name="btnDeletePrescription" Content="Delete Prescription" Click="btnDeletePrescription_Click"/>
                <Button x:Name="btnAllPrescription" Content="All Prescription" Click="btnAllPrescriptions_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>